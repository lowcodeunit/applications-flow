{
    "name": "@lowcodeunit/applications-flow",
    "version": "0.0.5",
    "author": {
        "name": "Fathym"
    },
    "scripts": {
        "build": "npm run build:common && npm run build:lcu && npm run build:demo && npm run build:social-host",
        "build:common": "ng build common --configuration production",
        "build:demo": "ng build demo --configuration production",
        "build:krakyn": "ng build krakyn --configuration production",
        "build:lcu": "ng build lcu --configuration production --single-bundle && npm run pack",
        "build:social-host": "ng build social-host --configuration production",
        "clean": "rimraf dist",
        "deploy": "npm version patch && npm run deploy:all",
        "deploy:all": "npm run deploy:common && npm run deploy:lcu && concurrently \"npm:deploy:demo\" \"npm:deploy:krakyn\" \"npm:deploy:social-host\"",
        "deploy:common": "npm version patch --prefix projects/common && npm run build:common && npm publish ./dist/common --access public",
        "deploy:demo": "npm version patch --prefix projects/demo && npm run build:demo && npm publish ./dist/demo --access public",
        "deploy:krakyn": "npm version patch --prefix projects/krakyn && npm run build:krakyn && npm publish ./dist/krakyn --access public",
        "deploy:lcu": "npm version patch --prefix projects/lcu && npm run build:lcu && npm publish ./dist/lcu --access public",
        "deploy:social-host": "npm version patch --prefix projects/social-host && npm run build:social-host && npm publish ./dist/social-host --access public",
        "format:all": "prettier --write .",
        "format:check": "prettier --check .",
        "ng": "ng",
        "pack": "npm run pack:lcu",
        "pack:join": "concat-glob-cli -f \"dist/lcu/wc/lcu.*.js\" -o dist/lcu/wc/applications-flow.lcu.js",
        "pack:lcu": "rimraf dist/lcu/wc && mkdirp dist/lcu/wc && npm run pack:main && npm run pack:pollyfills && npm run pack:join && npm run pack:styles",
        "pack:main": "concat-glob-cli -f \"dist/lcu/main.*.js\" -o dist/lcu/wc/lcu.startup.js",
        "pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/lcu/wc/lcu.pollyfills.js",
        "pack:styles": "concat-glob-cli -f \"dist/lcu/wc/styles.*.css\" -o dist/lcu/wc/applications-flow.lcu.css",
        "precommit": "npm run format:check",
        "start": "npm run clean && npm-run-all --parallel watch:*",
        "start:demo": "ng serve demo --port=4200",
        "start:krakyn": "ng serve krakyn --configuration development",
        "start:social-host": "ng serve social-host --configuration development",
        "watch:common": "ng build common --watch",
        "watchs:krakyn": "wait-on dist/common/lcu.api.d.ts && npm run start:krakyn",
        "watchs:demo": "wait-on dist/common/lcu.api.d.ts && npm run start:demo",
        "watch:social-host": "wait-on dist/common/lcu.api.d.ts && npm run start:social-host",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "prepare": "husky install"
    },
    "private": false,
    "dependencies": {
        "@angular/animations": "13.2.2",
        "@angular/cdk": "13.2.2",
        "@angular/common": "13.2.2",
        "@angular/compiler": "13.2.2",
        "@angular/core": "13.2.2",
        "@angular/elements": "13.2.2",
        "@angular/flex-layout": "^13.0.0-beta.36",
        "@angular/forms": "13.2.2",
        "@angular/material": "13.2.2",
        "@angular/platform-browser": "13.2.2",
        "@angular/platform-browser-dynamic": "13.2.2",
        "@angular/router": "13.2.2",
        "@aspnet/signalr": "^1.1.4",
        "@kolkov/angular-editor": "^2.0.0",
        "@lcu/common": "1.84.755-angular-13",
        "@lowcodeunit-devkit/ng-lcu": "^1.28.161",
        "@lowcodeunit/app-host-common": "1.23.100-angular-13",
        "@lowcodeunit/data-grid": "1.20.257-angular-13",
        "@lowcodeunit/lazy-element": "^1.21.85-angular-13",
        "@lowcodeunit/lcu-documentation-common": "1.6.59-angular-13",
        "@lowcodeunit/lcu-icons-common": "1.2.77-angular-13",
        "@lowcodeunit/lcu-theme-builder-common": "1.5.106-angular-13",
        "@semanticjs/common": "^0.50.0",
        "@semanticjs/krakyn": "0.64.0",
        "@semanticjs/napkin-ide": "0.12.24-node-id-bug",
        "@webcomponents/custom-elements": "^1.4.3",
        "@webcomponents/webcomponentsjs": "^2.5.0",
        "hammerjs": "^2.0.8",
        "lit": "^2.0.2",
        "moment": "^2.29.1",
        "ngx-build-plus": "^13.0.1",
        "ngx-color-picker": "^11.0.0",
        "rxjs": "~7.5.1",
        "sass.js": "^0.11.1",
        "skeleton-elements": "^4.0.0",
        "stream": "^0.0.2",
        "swagger-ui": "^4.1.3",
        "tinycolor2": "^1.4.2",
        "tslib": "^2.3.1",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "13.2.2",
        "@angular/cli": "13.2.2",
        "@angular/compiler-cli": "13.2.2",
        "@lcu/cli": "^1.7.97",
        "@types/jasmine": "~3.10.3",
        "@types/node": "^12.11.1",
        "@types/tinycolor2": "^1.4.3",
        "concat-glob-cli": "^0.1.0",
        "concurrently": "^7.0.0",
        "eslint": "^8.12.0",
        "husky": "^7.0.4",
        "jasmine-core": "~3.10.1",
        "jasmine-spec-reporter": "~7.0.0",
        "karma": "~6.3.9",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.3",
        "karma-jasmine": "~4.0.1",
        "karma-jasmine-html-reporter": "^1.7.0",
        "lint-staged": "^12.3.7",
        "mkdirp": "^1.0.4",
        "ng-packagr": "^13.1.2",
        "npm-run-all": "^4.1.5",
        "pre-commit": "^1.2.2",
        "prettier": "^2.6.2",
        "protractor": "~7.0.0",
        "rimraf": "^3.0.2",
        "ts-node": "~10.4.0",
        "tslint": "~6.1.3",
        "typescript": "~4.5.4",
        "wait-on": "^5.3.0"
    }
}
