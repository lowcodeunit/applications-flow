{
	"name": "@lowcodeunit/applications-flow",
	"version": "0.0.1",
	"scripts": {
    "build": "npm run build:common && npm run build:lcu && npm run build:demo",
		"build:common": "ng build common",
		"build:demo": "ng build demo --prod",
		"build:lcu": "ng build lcu --prod --single-bundle && npm run pack",
		"clean": "rimraf dist",
		"demo": "npm run build:common && npm run start:demo",
		"demo:lcu": "npm run build:common && npm run build:lcu && npm run start:demo",
		"deploy": "npm version patch && npm run deploy:all",
		"deploy:all": "npm run deploy:common && npm run deploy:lcu && npm run deploy:demo",
		"deploy:common": "npm version patch --prefix projects/common && npm run build:common && npm publish ./dist/common --access public",
		"deploy:demo": "npm version patch --prefix projects/demo && npm run build:demo && npm publish ./dist/demo --access public",
		"deploy:lcu": "npm version patch --prefix projects/lcu && npm run build:lcu && npm publish ./dist/lcu --access public",
		"ng": "ng",
		"pack": "npm run pack:lcu",
		"pack:join": "concat-glob-cli -f \"dist/lcu/wc/lcu.*.js\" -o dist/lcu/wc/applications-flow.lcu.js",
		"pack:lcu": "rimraf dist/lcu/wc && mkdirp dist/lcu/wc && npm run pack:main && npm run pack:pollyfills && npm run pack:join && npm run pack:styles",
		"pack:main": "concat-glob-cli -f \"dist/lcu/main.*.js\" -o dist/lcu/wc/lcu.startup.js",
		"pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/lcu/wc/lcu.pollyfills.js",
		"pack:styles": "concat-glob-cli -f \"dist/lcu/wc/styles.*.css\" -o dist/lcu/wc/applications-flow.lcu.css",
		"start": "npm run clean && npm-run-all --parallel watch:*",
		"start:demo": "ng serve demo --port=4200 --aot=false",
		"watch:common": "ng build common --watch",
		"watch:demo": "wait-on dist/common/lcu.api.d.ts && npm run start:demo",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e"
	},
	"private": false,
	"dependencies": {
		"@angular/animations": "~11.2.7",
		"@angular/cdk": "^11.2.6",
		"@angular/common": "~11.2.7",
		"@angular/compiler": "~11.2.7",
		"@angular/core": "~11.2.7",
		"@angular/elements": "^11.2.7",
		"@angular/flex-layout": "^11.0.0-beta.33",
		"@angular/forms": "~11.2.7",
		"@angular/material": "^11.2.6",
		"@angular/platform-browser": "~11.2.7",
		"@angular/platform-browser-dynamic": "~11.2.7",
		"@angular/router": "~11.2.7",
		"@aspnet/signalr": "^1.1.4",
		"@lcu/common": "^1.83.727",
		"@lowcodeunit-devkit/ng-lcu": "^1.28.161",
		"@lowcodeunit/app-host-common": "^1.21.135",
		"@lowcodeunit/data-grid": "^1.20.236",
		"@lowcodeunit/lazy-element": "^1.21.68",
		"@lowcodeunit/lcu-documentation-common": "^1.6.38",
		"@lowcodeunit/lcu-icons-common": "^1.2.56",
		"@webcomponents/custom-elements": "^1.4.3",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"hammerjs": "^2.0.8",
		"ngx-build-plus": "^11.0.0",
		"ngx-monaco-editor": "^10.0.0-beta.1",
		"rxjs": "~6.6.0",
		"swagger-ui": "^3.47.1",
		"tslib": "^2.0.0",
		"zone.js": "~0.11.3"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~0.1002.3",
		"@angular/cli": "~11.2.6",
		"@angular/compiler-cli": "~11.2.7",
		"@lcu/cli": "^1.7.97",
		"@types/jasmine": "~3.6.0",
		"@types/node": "^12.11.1",
		"codelyzer": "^6.0.0",
		"concat-glob-cli": "^0.1.0",
		"jasmine-core": "~3.6.0",
		"jasmine-spec-reporter": "~5.0.0",
		"karma": "~6.1.0",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.0.3",
		"karma-jasmine": "~4.0.0",
		"karma-jasmine-html-reporter": "^1.5.0",
		"mkdirp": "^1.0.4",
		"ng-packagr": "^10.1.0",
		"npm-run-all": "^4.1.5",
		"protractor": "~7.0.0",
		"rimraf": "^3.0.2",
		"ts-node": "~8.3.0",
		"tslint": "~6.1.0",
		"typescript": "~4.1.5",
		"wait-on": "^5.3.0"
	}
}
